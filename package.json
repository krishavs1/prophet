{
  "name": "prophet",
  "version": "0.1.0",
  "description": "AI-Powered White-Hat Smart Contract Security Agent for DeFi",
  "private": true,
  "workspaces": [
    "frontend",
    "agent",
    "contracts"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "@0glabs/0g-ts-sdk": {
      "ethers": "6.16.0"
    }
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "avoid"
  }
}
